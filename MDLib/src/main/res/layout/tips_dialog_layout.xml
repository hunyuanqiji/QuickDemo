<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:showDividers="middle"
        android:divider="@drawable/list_divider">
        <TextView
            android:id="@+id/tips_dialog_layout_TV_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/item_title_TextColor"
            android:layout_gravity="center"
            android:padding="15dp"
            android:lineSpacingMultiplier="1.3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:showDividers="middle"
            android:divider="@drawable/list_divider_vertical">
            <TextView
                android:id="@+id/tips_dialog_layout_TV_cancle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:text="取消"
                android:textSize="15sp"
                android:textColor="@color/item_title_TextColor"
                android:gravity="center"
                android:background="@drawable/tips_dialog_layout_background"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tips_dialog_layout_TV_sure"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:text="确定"
                android:textSize="15sp"
                android:textColor="@color/title_bar"
                android:background="@drawable/tips_dialog_layout_background"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>