<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingLeft="@dimen/item_right_raw_paddingRight_Left"
    android:paddingRight="@dimen/item_right_raw_paddingRight_Left">

    <TextView
        android:id="@+id/info_item_et_layout_TV_import"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="*"
        android:textColor="@color/red"
        android:visibility="gone" />

    <TextView
        android:id="@+id/info_item_et_layout_TV_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/info_item_et_layout_TV_import"
        android:text=""
        android:textColor="@color/item_title_TextColor"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/record_item_layout_Layout_Data"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="10dp">

        <EditText
            android:id="@+id/info_item_et_layout_ET_content"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/record_item_layout_TV_label"
            android:layout_alignBottom="@id/record_item_layout_TV_label"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:paddingRight="13dp"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/hint_textColor"
            android:textCursorDrawable="@null"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/record_item_layout_TV_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="1dp"
            android:text=""
            android:textColor="@color/item_title_TextColor"
            android:textSize="10sp"
            android:visibility="visible" />
    </RelativeLayout>
</RelativeLayout>