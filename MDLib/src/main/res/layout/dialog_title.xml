<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_reserve_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_size_15dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tips_dialog_layout_TV_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:text="多放放广告"
            android:textColor="@color/item_title_TextColor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tips_dialog_layout_TV_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="fsf"
            android:textColor="@color/hint_textColor"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/divider_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:divider="@drawable/list_divider_vertical"
            android:orientation="horizontal"
            android:showDividers="middle">

            <TextView
                android:id="@+id/tips_dialog_layout_TV_cancle"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/tips_dialog_layout_background"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/title_bar"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tips_dialog_layout_TV_sure"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/tips_dialog_layout_background"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/title_bar"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>